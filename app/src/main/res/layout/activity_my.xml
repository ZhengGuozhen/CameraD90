<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#8f8f8f" >

        <RelativeLayout
            android:layout_width="1080px"
            android:layout_height="1440px"
            android:id="@+id/layout_draw">

            <FrameLayout
                android:id="@+id/camera_preview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true">
            </FrameLayout>

            <ImageView
                android:id="@+id/ivMetering"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/ivFocus"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/layout_buttons"
            android:paddingBottom="4dp">

            <Button
                android:id="@+id/button_ec"
                android:text="0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="480dp"
                android:textStyle="bold"
                android:background="@drawable/circle_button_trans"
                android:textSize="24dp" />
            <Button
                android:id="@+id/button_ecAdd"
                android:text="+"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button_ec"
                android:layout_marginTop="480dp"
                android:textStyle="bold"
                android:background="@drawable/circle_button_trans"
                android:textSize="36dp" />
            <Button
                android:id="@+id/button_ecReduce"
                android:text="-"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button_ec"
                android:layout_marginTop="480dp"
                android:textStyle="bold"
                android:background="@drawable/circle_button_trans"
                android:textSize="36dp" />

            <Button
                android:id="@+id/button_capture"
                android:text="( O )"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:background="@drawable/circle_button" />
            <Button
                android:id="@+id/button_photoSize"
                android:text="8M"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:background="@drawable/circle_button_trans" />
            <Button
                android:id="@+id/button_flash"
                android:text="off"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="480dp"
                android:textStyle="bold"
                android:background="@drawable/circle_button_trans" />
            <Button
                android:id="@+id/button_zoom"
                android:text="0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="56dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:background="@drawable/circle_button"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/button_focusMode"
                android:text="auto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="480dp"
                android:textStyle="bold"
                android:background="@drawable/circle_button_trans" />

            <Button
                android:id="@+id/button_shutter"
                android:text="[ O ]"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="240dp"
                android:textStyle="bold"
                android:background="@drawable/circle_button" />

            <Button
                android:id="@+id/button_record"
                android:text="Rec"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="64dp"
                android:textStyle="bold"
                android:background="@drawable/circle_button" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_lock"
            android:text="Lock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="400dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:background="#45c1ff"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/button_close"
            android:text="Over"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:background="@drawable/circle_button_trans" />

    </RelativeLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:name="com.example.zgz.camerad90.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>
